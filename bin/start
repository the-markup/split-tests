#!/bin/bash

set -e

stop_containers() {
  echo "Shutting off containers..."
  echo
  docker-compose stop
  echo
  echo "All done!"
}

trap stop_containers SIGINT

echo "Starting containers..."
echo
docker-compose up -d
echo

# echo "Running npm install..."
# echo
# npm install
# echo

# echo "Starting webpack..."
# npm run start
